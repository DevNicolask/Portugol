algoritmo "Contede10ate0"
Var contador : Inteiro
inicio

// Define a variável contador como 0.
   contador <- 10

// Inicia o loop enquanto contador for menor ou igual a 10.
   Enquanto (contador = 0) faca
      EscrevaL(contador)
      contador <- contador - 1
   FimEnquanto

// Mostra na tela a mensagem "Terminei de contar" e termina o programa.
   Escreval("Terminei de contar")
fimalgoritmo